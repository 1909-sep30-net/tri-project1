@model IEnumerable<WatchStoreApp.Models.ProductViewModel>

@{ViewData["Title"] = "Index";
}

<h1><strong>Product</strong></h1>

<p>
    <table class="table">
        <thread>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
            </tr>
        </thread>
        <tbody>
            @foreach (var prod in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelProd => prod.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelProd => prod.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelProd => prod.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelProd => prod.Price)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</p>